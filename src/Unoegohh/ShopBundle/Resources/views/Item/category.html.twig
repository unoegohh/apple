{% extends "UnoegohhShopBundle:Default:index.html.twig" %}
{% block main %}
    <div class="col2">
    <div class="sorting">
        <div id="page_navigation">
            <a class="previous_link" href="javascript:previous();"><img src="/images/prevbtn.gif" alt=""></a>
            {#{% for i in range(1 , products|length | round) %}#}
                {#<a class="page_link {% if i == 1 %}active_page{% endif %}" href="javascript:go_to_page({{ i-1 }})" longdesc="{{ i -1 }}">{{ i }}</a>#}
            {#{% endfor %}#}
            <a class="next_link" href="javascript:next();"><img src="/images/nextbtn.gif" alt=""></a></div>
        <a href="#" class="switch_thumb">&nbsp;</a>
    </div>
    <h2 class="heading">{{ category.name }}</h2>
    <input type="hidden" id="current_page" value="0">
    <input type="hidden" id="show_per_page" value="8">
    <div class="listing">
    <ul id="test" class="display">

    {% for product in products.items %}
        <li class="big">
            <div class="big_li_sec">
                <a href="{{ path("unoegohh_shop_item", {"id": product.id}) }}" class="thumb"><img src="{{ product.photos[0].url }}" alt=""></a>
                <a href="{{ path("unoegohh_shop_item", {"id": product.id}) }}" class="title">{{ product.name }} <br/> <br/></a>
                <p class="colr bold price">{{ product.price }} руб.</p>
                <a href="#"    ng-click="addToCart({{ product.id }}, {{ product.price }},count,'{{ product.name }}', '{{ product.photos[0].url }}')" class="cart">&nbsp;</a>
            </div>
            <div class="big_li_sec_right">
                <h2 class="colr">{{ product.name }}</h2>
                <div class="clear"></div>
                <br><br>
                <div class="clear"></div>
                <h6 class="black">Описание</h6>
                <p style="height: 47px;overflow: hidden;">
                    {{ product.description | nl2br }}
                </p>
                <br>
                <div class="clear"></div>
                <a href="{{ path("unoegohh_shop_item", {"id": product.id}) }}" class="simplebtnsmall right"><span>Подробнее</span></a>
                <a href="#" ng-click="addToCart({{ product.id }}, {{ product.price }},count,'{{ product.name }}', '{{ product.photos[0].url }}')" class="simplebtnsmall right btnmarg"><span>Добавить в корзину</span></a>
            </div>
        </li>
    {% endfor %}
    </ul>
    </div>
    <div class="clear"></div>
